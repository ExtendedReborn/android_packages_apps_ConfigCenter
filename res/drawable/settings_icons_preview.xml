<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:width="310dp"
                android:height="80dp" />
        </shape>
    </item>
    <item android:gravity="left">
        <layer-list>
            <item>
                <com.android.settingslib.widget.AdaptiveIconShapeDrawable
                    android:height="80dp"
                    android:width="80dp"
                    android:color="#30e5173f"/>
            </item>
            <item android:drawable="@drawable/themeengine_category_icon"
                android:gravity="center"
                android:width="40dp"
                android:height="40dp"/>
        </layer-list>
    </item>
    <item android:gravity="center">
        <layer-list>
            <item>
                <com.android.settingslib.widget.AdaptiveIconShapeDrawable
                    android:height="80dp"
                    android:width="80dp"
                    android:color="#3084a7f4"/>
            </item>
            <item android:drawable="@drawable/lockscreen_category_icon"
                android:gravity="center"
                android:width="40dp"
                android:height="40dp"/>                
        </layer-list>
    </item>
    <item android:gravity="right">
        <layer-list>
            <item>
                <com.android.settingslib.widget.AdaptiveIconShapeDrawable
                    android:height="80dp"
                    android:width="80dp"
                    android:color="#3031aa5c"/>
            </item>
            <item android:drawable="@drawable/misc_category_icon"
                android:gravity="center"
                android:width="40dp"
                android:height="40dp"/>
        </layer-list>
    </item>
</layer-list>
